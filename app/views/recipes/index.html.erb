<%#= link_to recipe_path(@recipes), class: "btn btn-flat" %>
<!--<div class="banner">-->
<div class="container text-center">
  <div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: recipes_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a Recipe Name or Ingredient "
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<h1> Recipe Book </h1>
</div>

</div>
  <div class="container">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe.title, recipe_path(recipe), class: "link-recipe" %>
    <% end %>
     <%= link_to "Add a recipe", new_recipe_path, class: "btn btn-primary" %>
  </div>
