<h1>Notes</h1>

<div class="h2 text-center">
  <h2>Manage Notes</h2>
</div>
<hr>

<% if @note.persisted? %>
  <h3>Edit Note</h3>
  <%= simple_form_for [@recipe, @note] do |f| %>
    <%= f.input :content %>
    <%= f.submit "Update Note", class: "btn btn-warning" %>
  <% end %>
<% else %>
  <h3>Add a Note</h3>
  <%= simple_form_for [@recipe, Note.new] do |f| %>
    <%= f.input :content %>
    <%= f.submit "Add Note", class: "btn btn-primary" %>
  <% end %>
<% end %>

<h3>Current Notes</h3>
<% @recipe.notes.each do |note| %>
  <div>
    <p><%= note.content %></p>
    <%= link_to "Edit", edit_recipe_note_path(@recipe, note), class: "btn btn-outline-warning btn-sm" %>
    <%= link_to "Delete", recipe_note_path(@recipe, note), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
  </div>
<% end %>

<%= link_to "Back to Recipe", recipe_path(@recipe), class: "btn btn-secondary mt-3" %>
