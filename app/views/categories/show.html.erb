<div class="container d-flex p-5">

  <div class="text-center" id="categoryinfo">
    <!-- Category image and details (unchanged) -->
    <% if @category.photo.attached? %>
      <%= cl_image_tag @category.photo.key, class: "rounded-circle mb-3", style: "width: 150px; height: 150px; object-fit: cover;" %>
    <% else %>
      <div class="placeholder-image rounded-circle mb-3 d-flex align-items-center justify-content-center text-center" style="width: 150px; height: 150px; background-color: #f0f0f0;">
        <span>Please add an image</span>
      </div>
    <% end %>

    <h1 class="text-primary"><%= @category.name %></h1>
    <p class="text-muted"><%= @category.recipes.count %> recipes</p>
    <div class="category-action">
      <%= link_to new_recipe_path(category: @category), class: "action-icon text-info", title: "Add Recipe" do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>
      <%= link_to edit_category_path(@category), class: "action-icon text-warning", title: "Edit Category" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to category_path(@category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "action-icon text-danger", title: "Delete Category" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>

  <div class="p-5 category-list">
    <h2 class="pb-4 text-center">Recipes in this category</h2>
    <div class="row">
      <% @category.recipes.each do |recipe| %>
        <div class="col-md-4 pb-4">
          <%= link_to recipe_path(recipe), class: "text-decoration-none" do %>
            <div class="card h-100 rounded-card">
              <div class="card-img-container">
                <% if recipe.photo.attached? %>
                  <%= cl_image_tag recipe.photo.key, class: "card-img-top", style: "height: 100px; object-fit: cover;" %>
                <% else %>
                  <div class="placeholder-image d-flex align-items-center justify-content-center text-center" style="height: 100px;">
                    <span>Please add an image</span>
                  </div>
                <% end %>
              </div>
              <div class="card-body p-2">
                <h5 class="card-title text-dark pb-0"><%= recipe.title %></h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
