<div class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center">
      <!-- Check if category image is attached -->
      <% if @category.photo.attached? %>
        <%= cl_image_tag @category.photo.key, class: "rounded-circle mb-3", style: "width: 200px; height: 200px; object-fit: cover;" %>
      <% else %>
        <div class="placeholder-image rounded-circle mb-3 d-flex align-items-center justify-content-center text-center" style="width: 200px; height: 200px; background-color: #f0f0f0;">
          <span>Please add an image</span>
        </div>
      <% end %>

      <h1 class="text-primary"><%= @category.name %></h1>
      <p class="text-muted"><%= @category.recipes.count %> recipes</p>
      <div class="mt-3">
        <%= link_to edit_category_path(@category), class: "btn btn-outline-warning me-2", title: "Edit Category" do %>
          <i class="fas fa-edit"></i> Edit
        <% end %>
        <%= link_to category_path(@category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "btn btn-outline-danger", title: "Delete Category" do %>
          <i class="fas fa-trash-alt"></i> Delete
        <% end %>
      </div>
    </div>

    <div class="col-md-8">
      <h2 class="mb-4">Recipes in this category</h2>
      <div class="row">
        <% @category.recipes.each do |recipe| %>
          <div class="col-md-6 mb-4">
            <div class="card h-100">
              <!-- Check if recipe image is attached -->
              <% if recipe.photo.attached? %>
                <%= cl_image_tag recipe.photo.key, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <div class="placeholder-image d-flex align-items-center justify-content-center text-center" style="height: 200px; background-color: #f0f0f0;">
                  <span>Please add an image</span>
                </div>
              <% end %>

              <div class="card-body">
                <h5 class="card-title"><%= recipe.title %></h5>
                <%= link_to "View Recipe", recipe_path(recipe), class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="text-center mt-4">
        <%= link_to new_recipe_path(category: @category), class: "btn btn-primary" do %>
          <i class="fas fa-plus-circle me-2"></i>Add New Recipe
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .placeholder-image {
    border: 2px dashed #ccc;
    color: #666;
    font-size: 0.9rem;
  }
</style>
