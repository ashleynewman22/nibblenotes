<main class="container my-5">
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-sm-8 my-3">
        <%= form_with url: categories_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a category"
            %>
          <%= button_tag type: 'submit', class: "btn btn-primary" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <h1 class="mb-4 text-center text-primary highlight-text">Explore Food Categories</h1>

  <div class="container mt-4">
    <div class="d-flex flex-wrap justify-content-center">
      <% @categories.each do |category| %>
        <div class="card me-3 mb-4 category-card" style="width: 18rem;">
          <%= link_to category_path(category), class: "text-decoration-none" do %>
            <div class="card-body bg-light d-flex flex-column justify-content-between">
              <div class="text-center mb-3">
                <%= cl_image_tag category.photo.key, class: "rounded-circle", style: "width: 150px; height: 150px; object-fit: cover;" %>
              </div>
              <h5 class="card-title text-success"><%= category.name %></h5>
              <p class="card-text text-muted"><%= category.recipes.count %> recipes</p>
            </div>
          <% end %>
          <div class="card-footer bg-white border-top d-flex justify-content-between align-items-center">
            <%= link_to new_recipe_path(category: category), class: "text-info", title: "Add Recipe" do %>
              <i class="fas fa-plus-circle"></i>
            <% end %>
            <%= link_to edit_category_path(category), class: "text-warning", title: "Edit Category" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "text-danger", title: "Delete Category" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to new_category_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus-circle me-2"></i>Add New Category
    <% end %>
  </div>
</main>

<style>
  .highlight-text {
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .highlight-text:hover {
    color: #007bff;
    transform: scale(1.05);
  }

  .category-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .card-footer a {
    transition: color 0.3s ease;
  }

  .card-footer a:hover {
    opacity: 0.7;
  }
</style>
