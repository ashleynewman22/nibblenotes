<div class="container mt-4">
  <h1 class="mb-4">Categories</h1>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <p class="card-text"><%= pluralize(category.recipes.count, 'recipe') %></p>
            <%= link_to "View Category", category_path(category), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
