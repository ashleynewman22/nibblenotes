<div class="container mt-5">
  <h1 class="mb-4">Categories for <%= @recipe.title %></h1>

  <% if @recipe.categories.any? %>
    <div class="list-group mb-4">
      <% @recipe.categories.each do |category| %>
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1"><%= category.name %></h5>
            <small class="text-muted"><%= category.description %></small>
          </div>
          <%= button_to 'Remove', recipe_category_path(@recipe.recipe_categories.find_by(category: category)),
                        method: :delete,
                        data: { confirm: 'Are you sure you want to remove this category?' },
                        class: 'btn btn-outline-danger btn-sm' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      No categories have been added to this recipe yet.
    </div>
  <% end %>

  <%= link_to 'Add New Category', new_recipe_recipe_category_path(@recipe), class: 'btn btn-primary' %>
  <%= link_to 'Back to Recipe', @recipe, class: 'btn btn-secondary ms-2' text-white %>
</div>
